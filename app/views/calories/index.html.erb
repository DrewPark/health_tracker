<style>
body {background-color: #EEFFFF}
</style>
<style>
h1 {color: red}
</style>

<p id="notice"><%= notice %></p>

<h1>Listing Calories</h1>

<table>
  <thead>
    <tr>
      <th>Calories consumed</th>
      <th>Calories on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calories.each do |calory| %>
      <tr>
        <td><%= calory.calories_consumed %></td>
        <td><%= calory.calories_on %></td>
        <td><%= link_to 'Show', calory %></td>
        <td><%= link_to 'Edit', edit_calory_path(calory) %></td>
        <td><%= link_to 'Destroy', calory, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Calory', new_calory_path %>
<div>
<p><%= link_to 'Home', :root %></p>
</div>

<div>
  <p> Your total calories (even though you don't want to think about it): <%= @calories_consumed %></p>
</div>
